  "bugs": { "url": "https://github.com/Link-Genetic-Inc/lid/issues" },
  "homepage": "https://linkgenetic.com",
  "dependencies": { "cross-fetch": "^4.0.0" },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^15.2.1",
    "@rollup/plugin-typescript": "^11.1.2",
    "@types/jest": "^29.5.4",
    "@types/node": "^20.5.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "^8.47.0",
    "jest": "^29.6.2",
    "jest-environment-jsdom": "^29.6.2",
    "rollup": "^3.28.1",
    "ts-jest": "^29.1.1",
    "tslib": "^2.6.2",
    "typedoc": "^0.24.8",
    "typescript": "^5.1.6"
